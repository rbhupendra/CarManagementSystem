@model CarManagementSystem.Data.Models.SubModel
@{
    ViewData["Title"] = "SubModelDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-12">

            <!-- Trigger the modal with a button -->
            @*// <button type="button" class="btn btn-info " data-toggle="modal" data-target="#addCarModel">+ Add Car</button>*@
            <a href="#" class="btn btn-info" onclick="AddNewSubModel(0)">Add New</a> <br />
            <!-- Modal -->
            <div class="modal" tabindex="-1" role="dialog" id="addSubModel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 id="ModalTitle"></h5>
                            <h2>@ViewBag.Message</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="form">
                                <fieldset id="SubmitForm">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="SM_Id" id="smId" />

                                    <div class="form-group">
                                        <label asp-for="SM_Name" class="control-label"></label>
                                        <input asp-for="SM_Name" maxlength="30" id="smName" class="form-control" />
                                        <span asp-validation-for="SM_Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SM_Discription" class="control-label"></label>
                                        <input asp-for="SM_Discription" id="smDiscription" class="form-control" />
                                        <span asp-validation-for="SM_Discription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SM_Feature" class="control-label"></label>
                                        <input asp-for="SM_Feature" id="smFeature" class="form-control" />
                                        <span asp-validation-for="SM_Feature" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="SM_Price" class="control-label"></label>
                                        <input asp-for="SM_Price" maxlength="18" id="smPrice" class="form-control" />
                                        <span asp-validation-for="SM_Price" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="MO_Id" id="mname" class="control-label">Model</label>
                                        <select asp-for="MO_Id" class="form-control" asp-items="@(new SelectList(ViewBag.modelList,"MO_Id","MO_Name"))">
                                            <option value="0">Please select Sub Model</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" id="SaveSubModel" value="Save" class="btn btn-primary" />
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />


        <div class="col-md-12">
            <table id="SubModelTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%">

                <thead>
                    <tr>
                        <th></th>
                        <th>
                            <input type="search" placeholder="Search Name" id="txtsmName">
                        </th>
                        <th>
                            <input type="search" placeholder="Search Dispcription" id="txtsmDescription" />
                        </th>
                        <th>
                            <input type="search" placeholder="Search Feature" id="txtsmFeature">
                        </th>

                        <th colspan="4">
                            <input type="search" placeholder="Search Model" id="txtModel">
                        </th>

                    </tr>
                    <tr>
                        <th></th>
                        <th>
                            SubModel Name
                        </th>
                        <th>
                            Discription
                        </th>
                        <th>
                            Feature
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Price
                        </th>

                        <th>
                            Edit
                        </th>
                        <th>
                            Delete
                        </th>


                    </tr>
                </thead>

            </table>

        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
}