@model CarManagementSystem.Data.Models.Model

@{
    ViewData["Title"] = "ModelDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{

    <div class="row">
        <div class="col-md-12">

            <!-- Trigger the modal with a button -->
            @*// <button type="button" class="btn btn-info " data-toggle="modal" data-target="#addCarModel">+ Add Car</button>*@
            <a href="#" class="btn btn-info" onclick="AddNewModel(0)">Add New Model</a> <br />
            <!-- Modal -->
            <div class="modal" tabindex="-1" role="dialog" id="addModel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 id="ModalTitle"></h5>
                            <h2>@ViewBag.Message</h2>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="form">

                                <fieldset id="SubmitForm">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="MO_Id" id="mid" />
                                    <div class="form-group">
                                        <label asp-for="MO_Name" class="control-label"></label>
                                        <input asp-for="MO_Name" id="mname" class="form-control" />
                                        <span asp-validation-for="MO_Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MO_Discription" class="control-label"></label>
                                        <input asp-for="MO_Discription" id="mdiscription" class="form-control" />
                                        <span asp-validation-for="MO_Discription" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="MO_Feature" class="control-label"></label>
                                        <input asp-for="MO_Feature" id="mfeature" class="form-control" />
                                        <span asp-validation-for="MO_Feature" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="CR_Id" id="cname" class="control-label">Car Name</label>
                                        <select asp-for="CR_Id" asp-items="@(new SelectList(ViewBag.carList,"CR_Id","CR_Name"))" class="form-control">
                                            <option value="0">Please select Car</option>
                                        </select>

                                    </div>
                                    <div class="form-group">
                                        <input type="submit" id="SaveModel" value="Save" class="btn btn-primary" />
                                    </div>
                                </fieldset>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

            <br />


            <div class="col-md-12">
                <table id="ModelTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%">

                    <thead>
                        <tr>
                            <th>
                            </th>
                            <th colspan="6">
                                <input type="search" placeholder="Search Name" id="txtModelName">
                            </th>


                        </tr>
                        <tr>
                            <th></th>
                            <th>
                                Model Name
                            </th>
                            <th>
                                Discription
                            </th>
                            <th>
                                Feature
                            </th>
                            <th>
                                Car
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>


                        </tr>
                    </thead>

                </table>

            </div>

        </div>

    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

}