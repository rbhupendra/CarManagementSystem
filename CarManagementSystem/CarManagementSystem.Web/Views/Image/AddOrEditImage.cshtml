@model CarManagementSystem.Data.Entities.Images

@{
    ViewData["Title"] = "AddOrEditImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddOrEditImage</h1>

<h4>Images</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEditImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="MO_Id" id="moId" class="control-label"></label>
                <select asp-for="MO_Id" asp-items="@(new SelectList(ViewBag.moList,"MO_Id","MO_Name"))" class="form-control">
                    <option value="0">Please select Model</option>
                </select>
                <span asp-validation-for="MO_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input type="file" asp-for="Img" name="fileupload" multiple="multiple" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

